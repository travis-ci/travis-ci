<%= stylesheet_link_tag 'application' %>
<%= stylesheet_link_tag 'jasmine' if Rails.env.jasmine? %>
<%= stylesheet_link_tag 'mobile'  if mobile_device? %>

<%= javascript_include_tag 'application' %>
<%= javascript_include_tag 'jasmine' if Rails.env.test? %>
<%#= javascript_include_tag 'specs'   if Rails.env.jasmine? %>

<script type="text/javascript">
  I18n.defaultLocale = "<%= I18n.default_locale %>";
  I18n.locale = "<%= I18n.locale %>";
  I18n.fallbacks = <%= Rails.env.production? %>;

  var env = Travis.env = '<%= Travis.env %>';
  var pusher = new Pusher('<%= Travis.config.pusher.key %>');

  Travis.assets = {
    host:    '<%= Travis.config.assets.host %>',
    version: '<%= Travis.config.assets.version %>'
  };
</script>
